@model UserInfo
@{
    ViewData["title"] = "Başvuru Detayı";
}
@{
     var status = @Model.WillAttend ? "Katılıyor" : "Katılmıyor";
     var className = @Model.WillAttend ? "success" : "danger";

}
<main class="text-center">
    <h1 class="h4">Başvuru Detayı</h1>
    <p class="bg-@className">
        @status
    </p>
    <p>İsim: @Model.Name</p>
    <p>Email: @Model.Email</p>
    <p>Phone: @Model.Phone</p>
    <a asp-controller="Meeting" asp-action="List" class="btn btn-outline-@className">Katılımcı Listesi</a>
</main>