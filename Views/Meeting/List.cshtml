@model List<UserInfo>
<main class="text-center">
    <h1 class="h4">Toplantıya katılım lsitesi</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>Ad</td>
                <td>Katılım Durumu</td>
                <td></td>
            </tr>
        </thead>
        <tbody>

            @{ int i = 0; }
            @foreach(var user in Model)
            {
                var status = user.WillAttend ? "Evet" : "Hayır";
                var className = user.WillAttend ? "table-success" : "table-danger";

                if(user.WillAttend) i++;

                <tr class="@className">
                    <td>@user.Name</td>
                    <td>@status</td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="#">Detay</a>
                    </td>
                </tr>
            }

            <div class="card">
                <div class="card-body">
                    <span>Katılımcı sayısı: @i</span>
                </div>
            </div>

        </tbody>
    </table>
</main>
